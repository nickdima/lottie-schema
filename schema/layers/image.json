      "oneOf": [
        {
          "$ref": "helpers/transform.json"
        }
      ],
      "type": "object"
    },
    "ao": {
      "title": "Auto-Orient",
      "description": "Auto-Orient",
      "type": "number",
      "oneOf": [
        {
          "$ref": "helpers/boolean.json"
        }
      ],
      "default": 0
    },
    "bm": {
      "title": "Blend Mode",
      "description": "Blend Mode",
      "type": "number",
      "oneOf": [
        {
          "$ref": "helpers/blendMode.json"
        }
      ],
      "default": 0
    },
    "ddd": {
      "title": "3d Layer",
      "description": "3d Layer",
      "type": "number",
      "oneOf": [
        {
          "$ref": "helpers/boolean.json"
        }
      ],
      "default": 0
