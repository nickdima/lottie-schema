      "description": "Out Point",
      "type": "number"
    },
    "st": {
      "title": "Start Time",
      "description": "Start Time",
      "type": "number"
    },
    "nm": {
      "title": "Name",
      "description": "Name",
      "type": "number"
    },
    "hasMask": {
      "title": "Has Masks",
      "description": "Has Masks",
      "type": "number"
    },
    "maskProperties": {
      "title": "Mask Properties",
      "description": "Mask Properties",
      "items": {
        "oneOf": [
          {
            "$ref": "helpers/mask.json"
          }
