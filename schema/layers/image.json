    "ef": {
      "title": "Effects",
      "description": "Effects",
      "items": {
        "oneOf": [
          {
            "$ref": "effects/index.json"
          }
        ],
        "type": "object"
      },
      "type": "array"
    },
    "sr": {
      "title": "Stretch",
      "description": "Stretch",
      "type": "number",
      "default": 1
